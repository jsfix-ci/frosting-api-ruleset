{
  "name": "spectral-jsonapi-ruleset",
  "version": "1.0.0",
  "description": "spectral rules for json:api",
  "main": "json-ruleset.yaml",
  "scripts": {
    "compile": "./bin/compile.js -i ./frosting-ruleset.yaml -o frosting-ruleset.local && ./bin/compile.js -i ./upstream-ruleset.yaml -o upstream-ruleset.local",
    "compile-ci": "./bin/compile.js -i ./frosting-ruleset.yaml -o frosting-ruleset.compiled && ./bin/compile.js -i ./upstream-ruleset.yaml -o upstream-ruleset.compiled",
    "fix": "./node_modules/.bin/eslint --fix test/ && ./node_modules/.bin/prettier --write .",
    "test": "./node_modules/.bin/eslint test/ && ./node_modules/.bin/mocha --recursive",
    "lint": "./node_modules/.bin/eslint test/ && ./node_modules/.bin/prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmlue42/spectral-jsonapi-ruleset.git"
  },
  "keywords": [
    "style-guide",
    "api",
    "linting",
    "spectral",
    "ruleset",
    "jsonapi"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmlue42/spectral-jsonapi-ruleset/issues"
  },
  "homepage": "https://github.com/jmlue42/spectral-jsonapi-ruleset#readme",
  "devDependencies": {
    "@stoplight/spectral": "^5.8.0",
    "chai": "^4.2.0",
    "eslint": "^7.11.0",
    "eslint-plugin-mocha": "^8.0.0",
    "husky": "^4.3.8",
    "jsonpath-plus": "^4.0.0",
    "mocha": "^8.2.0"
  },
  "husky": {
    "hooks": {}
  },
  "dependencies": {
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "archiver": "^5.3.1",
    "babel-loader": "^8.2.5",
    "fs-extra": "^10.1.0",
    "inflection": "^2.0.0",
    "prettier": "^2.7.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  }
}
